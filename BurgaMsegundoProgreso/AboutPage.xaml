<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BurgaMsegundoProgreso.AboutPage"
             Title="AboutPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <BoxView Color="AliceBlue" />
        <Label Text="Row 0, Column 0"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
        <BoxView Grid.Column="1"
                 Color="AliceBlue" />
        <Label Grid.Column="1"
               Text="Row 0, Column 1"
               HorizontalOptions="Center"
               VerticalOptions="Center" 
               TextColor="Black"/>
        <BoxView Grid.Row="1"
                 Color="AliceBlue" />
        <Label Grid.Row="1"
               Text="Row 1, Column 0"
               HorizontalOptions="Center"
               VerticalOptions="Center" 
               TextColor="Black"/>
        <BoxView Grid.Row="1"
                 Grid.Column="1"
                 Color="AliceBlue"/>
        <Label Grid.Row="1"
               Grid.Column="1"
               Text=" "
               TextColor="Black"
               HorizontalOptions="Center"
               VerticalOptions="Center" />

    </Grid>
</ContentPage>