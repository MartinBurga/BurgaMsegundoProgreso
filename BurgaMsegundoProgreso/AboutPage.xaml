<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BurgaMsegundoProgreso.AboutPage"
             Title="AboutPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <BoxView Color="AliceBlue" />
        <Label Text="Nombre: Martin Burga"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               FontAttributes="Bold"
               FontSize="40"
               />
        <BoxView Grid.Column="1"
                 Color="AliceBlue" 
                 />
        <Label Grid.Column="1"
               Text="Fecha: 02/06/2025"
               HorizontalOptions="Center"
               VerticalOptions="Center" 
               TextColor="Black"
               FontAttributes="Bold"
               FontSize="40"/>
        <BoxView Grid.Row="1"
                 Color="AliceBlue" />
        <Label Grid.Row="1"
               Text="Intereses: Tecnologia, juegos y musica"
               FontSize="40"
               HorizontalOptions="Center"
               VerticalOptions="Center" 
               TextColor="Black"
               FontAttributes="Bold"/>
        <BoxView Grid.Row="1"
                 Grid.Column="1"
                 Color="AliceBlue"/>
        <Label Grid.Row="1"
               Grid.Column="1"
               Text="Version: 1.0"
               TextColor="Black"
               FontSize="40"
               HorizontalOptions="Center"
               VerticalOptions="Center" 
               FontAttributes="Bold"/>

    </Grid>
</ContentPage>