<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BurgaMsegundoProgreso.JokesPage"
             Title="JokesPage">
    <VerticalStackLayout Spacing="20" >
        <Label
            x:Name="SetupLabel"
            Text=""
            HorizontalOptions="Center"
            VerticalOptions="Center"
            FontSize="30"
            FontAttributes="Bold"
            TextColor="Black"/>
        <Label
            x:Name="PunchlineLabel"
            Text=""
            HorizontalOptions="Center"
            VerticalOptions="Center"
            FontSize="30"
            FontAttributes="Bold"
            TextColor="Black"/>
        <Button
            x:Name="ChisteButton"
            Text="Get Joke"
            Clicked="ChisteButton_Clicked"
            VerticalOptions="Center"
            FontSize="20"
            HorizontalOptions="Center"
            BackgroundColor="Black"/>

        <Button
            x:Name="Return"
            Text="Home"
            Clicked="Return_Clicked"
            FontSize="20"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            BackgroundColor="Blue"/>
    </VerticalStackLayout>
</ContentPage>