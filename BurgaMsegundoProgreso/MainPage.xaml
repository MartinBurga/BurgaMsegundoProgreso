<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BurgaMsegundoProgreso.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Label
                x:Name="Welcome"
                Text="Welcome to Martin Burga App!"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                FontSize="50"
                FontAttributes="Bold"
            />
            <Image
                Source="gatocausa.jpg"
                HeightRequest="185"
                Aspect="AspectFit"/>    
            <Button
                x:Name="Jokes"
                Text="Jokes"
                Clicked="Jokes_Clicked"
                VerticalOptions="Center"
                FontSize="20"
                HorizontalOptions="Fill"
                BackgroundColor="Black"
                />
            <Button
                x:Name="About"
                Text="About"
                Clicked="About_Clicked"
                VerticalOptions="Center"
                FontSize="20"
                HorizontalOptions="Fill"
                BackgroundColor="Black"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
